<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مدیریت - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="http://cdn.font-store.ir/yekan.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom-rtl.css">
    <style>
        body {
            font-family: 'Vazir', sans-serif;
            direction: rtl;
            text-align: right;
            background: #f4f6f9;
        }

        .main-header {
            background: #fff;
            border-bottom: 1px solid #e9ecef;
            padding: 8px 0;
            height: 50px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .navbar-nav .nav-link {
            color: #1e3a8a;
            font-size: 0.95rem;
            padding: 6px 10px;
        }

            .navbar-nav .nav-link i {
                color: #1e3a8a;
                margin-left: 5px;
            }

        .main-sidebar {
            background: #1a252f;
            width: 230px;
        }

        .brand-link {
            padding: 10px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #1a252f;
        }

        .brand-text {
            font-size: 1.1rem;
            font-weight: 600;
            color: #c2c7d0;
        }

        .nav-link {
            color: #c2c7d0;
            font-size: 0.9rem;
            padding: 8px 15px;
        }

            .nav-link:hover {
                background: #007bff;
                color: #fff;
            }

        .nav-icon {
            margin-left: 8px;
        }

        .content-wrapper {
            margin-left: 230px;
            padding-top: 60px;
            min-height: calc(100vh - 50px - 40px);
        }

        .content {
            padding: 15px;
        }

        .main-footer {
            background: #1e3a8a;
            color: white;
            text-align: center;
            padding: 6px 0;
            font-size: 0.85rem;
            box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.05);
            height: 40px;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fa fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto">
                @if (Context.Session.GetInt32("UserId").HasValue)
                {
                    <li class="nav-item">
                        <form method="post" action="@Url.Action("Logout", "Account", new { area = "" })" class="logout-form">
                            <button type="submit" class="nav-link btn logout-btn">خروج</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Account")">ورود</a>
                    </li>
                }
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column">
                        <li class="nav-item">
                            <a href="/Admin/Dashboard" class="nav-link"><i class="nav-icon fas fa-tachometer-alt text-info"></i> داشبورد</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/AdminUser" class="nav-link"><i class="nav-icon fas fa-users text-success"></i> مدیریت کاربران</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/SubHomeService" class="nav-link"><i class="nav-icon fas fa-cogs text-warning"></i> مدیریت ساب سرویس‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/HomeService" class="nav-link"><i class="nav-icon fas fa-list text-primary"></i> مدیریت سرویس‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Category" class="nav-link"><i class="nav-icon fas fa-list text-primary"></i> مدیریت دسته‌بندی‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Order" class="nav-link"><i class="nav-icon fas fa-shopping-cart text-danger"></i> مدیریت سفارش‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Proposal" class="nav-link"><i class="nav-icon fas fa-handshake text-info"></i> پیشنهادهای هر سفارش</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Review" class="nav-link"><i class="nav-icon fas fa-comments text-success"></i> مدیریت کامنت‌ها</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="container">
                <strong>کپی‌رایت © 2025</strong> همه حقوق محفوظ است.
            </div>
        </footer>
    </div>

</body>
</html>