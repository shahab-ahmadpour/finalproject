@model App.Domain.Core.DTO.Categories.CategoryDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header" style="background: linear-gradient(90deg, #1e3c72 0%, #2a5298 100%); padding: 25px 0; border-bottom: 4px solid #00c4cc;">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 text-right">
                <h1 class="m-0 text-white" style="font-weight: 700; letter-spacing: 2px; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
                    <i class="fas fa-trash-alt mr-2"></i> حذف دسته‌بندی
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="content" style="background: #f4f6f9; padding: 40px 0;">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-lg" style="border-radius: 25px; overflow: hidden; background: #fff; transition: all 0.4s ease;">
                    <div class="card-header bg-gradient-dark p-4 text-white" style="border-bottom: 2px solid #00c4cc;">
                        <h4 class="mb-0" style="font-weight: 700; letter-spacing: 1px;">
                            <i class="fas fa-exclamation-triangle mr-2"></i> تأیید حذف دسته‌بندی
                        </h4>
                    </div>
                    <div class="card-body p-5">
                        <div class="alert alert-danger alert-dismissible fade show shadow-lg" style="border-radius: 15px; border-left: 6px solid #dc3545; background: linear-gradient(to right, #f8d7da, #f5c6cb);">
                            <strong class="text-danger"><i class="fas fa-exclamation-circle mr-2"></i> هشدار!</strong> آیا از حذف دسته‌بندی زیر اطمینان دارید؟
                        </div>

                        <p><strong>نام دسته‌بندی:</strong> @Model.Name</p>
                        <p><strong>توضیحات:</strong> @Model.Description</p>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <p><strong>تصویر:</strong></p>
                            <img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 200px; border-radius: 10px;" />
                        }

                        <form method="post" asp-action="Delete" asp-area="Admin" asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-lg shadow-lg px-5" style="border-radius: 30px; background: linear-gradient(45deg, #dc3545, #e4606d);">
                                <i class="fas fa-trash-alt mr-2"></i> حذف
                            </button>
                            <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-dark btn-lg shadow-lg px-5 ml-2" style="border-radius: 30px; background: linear-gradient(45deg, #2c3e50, #34495e);">
                                <i class="fas fa-arrow-left mr-2"></i> انصراف
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .card {
        transition: all 0.4s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }
</style>