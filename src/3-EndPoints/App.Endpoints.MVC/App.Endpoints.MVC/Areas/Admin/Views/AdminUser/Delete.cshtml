@model App.Domain.Core.DTO.Users.AppUsers.AppUserDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4 text-danger">حذف کاربر</h2>

<div class="card shadow">
    <div class="card-body">
        <h5>آیا مطمئن هستید که می‌خواهید کاربر <strong>@Model.FirstName @Model.LastName</strong> را حذف کنید؟</h5>
        <p class="text-muted">این عملیات قابل بازگشت نیست!</p>

        <form method="post" asp-area="Admin" asp-controller="AdminUser" asp-action="Delete" asp-route-id="@Model.Id">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">بله، حذف شود</button>
            <a href="@Url.Action("Index", "AdminUser", new { area = "Admin" })" class="btn btn-secondary">لغو</a>
        </form>
    </div>
</div>